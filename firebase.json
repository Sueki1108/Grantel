{
  "hosting": {
    "public": ".next",
    "rewrites": [
      {
        "source": "**",
        "function": "server"
      }
    ],
    "predeploy": [
      "npm --prefix . run build"
    ]
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ],
      "predeploy": [
        "npm --prefix functions install"
      ]
    }
  ]
}
